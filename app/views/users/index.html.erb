<section id="user-list">
  <ul id="users">
    <% @users.each do |user| %>
      <li>
        <img src="<%= user.image_url %>" alt="<%= user.name %>" width=80 height=80 class="user-list-thumb" />
        <h3><%= user.name %></h3>
        <p>
          <a href="/users/<%= user.id %>" data-user-id="<%= user.id %>" class="profile-link">Profile</a>
        </p>

        <p>
          <a href="/users/<%= user.id %>/follow" data-user-id="<%= user.id %>" class="follow-link">Follow</a>
        </p>
      </li>
    <% end %>
  </ul>

  <div class="clear"></div>
</section>